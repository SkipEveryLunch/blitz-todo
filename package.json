    "eslint": "8.54.0",
    "eslint-config-next": "14.0.3",
    "eslint-config-prettier": "9.0.0",
    "husky": "8.0.3",
    "jsdom": "22.1.0",
    "lint-staged": "15.1.0",
    "prettier": "^3.1.0",
    "prettier-plugin-prisma": "5.0.0",
