    "@blitzjs/rpc": "2.0.0-beta.35",
    "@chakra-ui/react": "2.8.2",
    "@emotion/react": "11.11.1",
    "@emotion/styled": "11.11.0",
    "@prisma/client": "5.6.0",
    "blitz": "2.0.0-beta.35",
    "final-form": "4.20.10",
    "framer-motion": "10.16.5",
    "next": "^14.0.3",
    "prisma": "5.6.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-final-form": "6.5.9",
